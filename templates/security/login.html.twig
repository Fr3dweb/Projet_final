{% extends 'base.html.twig' %}

{% block title %}Lectio. | Login{% endblock %}

{% block body %}

    <div class="d-flex h-100 w-100">
        <div class="m-auto">
            <h1>We are so glad to see you again.</h1>

            <div class="container mt-4">

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
{#                            {% if user.isLoggedIn %}#}
{#                                Hello {{ user.name }}!#}
{#                            {% endif %}#}
                            Vous êtes identifier en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-4 mb-4" autocomplete="email" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mt-4" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="mt-4 btn btn-lg btn-primary rounded-pill" type="submit">
                        Login
                    </button>
                </form>
            </div>

            <p>You don't have an account ? <a href={{ path('app_register') }}>Join us</a></p>

        </div>
    </div>
{% endblock %}

