{% extends 'base.html.twig' %}

{% block title %} Connexion | Longo Formation {% endblock %}

{% block myContent %}

    <div class="imgBg">
        <div class="squareForm m-auto col-4 h-70">
            <h1 class="text-center text-white">Bienvenue !</h1>
            <div class="container-fluid">
                <form method="post">
                    {% if error %}
                        {#                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
                        <div class="alert alert-danger">
                            <span> {{ error.message }}</span>
                        </div>
                    {% endif %}

                    {% if app.user %}
                    <span class="text-white"> Bonjour ! <span/>
                        <div class="mb-3 text-white">
                            Vous êtes identifier en tant que {{ app.user.firstName }}, <a
                                    href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <label class="text-white" for="inputEmail">Email</label>
                    <input type="email" placeholder="Entrer votre e-mail" name="email" id="inputEmail"
                           class="form-control mt-4 mb-4" autocomplete="email" required autofocus>
                    <label class="text-white" for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mt-4"
                           placeholder="Entrer votre mot de passe"
                           autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}
                    <div class="d-flex">
                        <div class="d-flex flex-wrap pt-3">
                            <p class="link">
                                <a href={{ path('app_forgot_password_request') }}>
                                    Mot de passe oublié?
                                </a>
                            </p>
                            <p class="text-white">
                                Vous n'avez pas de compte?
                                <a href={{ path('app_register') }}>
                                    Rejoignez nous!
                                </a>
                            </p>
                        </div>
                        <div class="d-flex justify-content-end col-3">
                            <button class="btn btnSubmitForm" type="submit">
                             Se connecter
                            </button>
                        </div>
                        </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

