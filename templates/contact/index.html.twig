{% extends 'base.html.twig' %}

{% block title %}Contact | Longo Formation {% endblock %}

{% block myContent %}
    <div class="container">
        <div class="row text-white d-flex justify-content-center align-items-center p-5">
            <div class="col-lg-5 col-md-6">
                <h1>Nous contacter</h1>
                <div class="form_contact">
                    {{ form_start(ContactFormType) }}
                    {{ form_row(ContactFormType.lastName) }}
                    {{ form_row(ContactFormType.firstName) }}
                    {{ form_row(ContactFormType.email) }}
                    {{ form_row(ContactFormType.formation) }}
                    {{ form_row(ContactFormType.comment) }}
                    <div class="d-flex justify-content-end align-items-end pe-2">
                        <button type="submit" class="btn btnSubmitForm ">Envoyer</button>
                    </div>
                    {{ form_end(ContactFormType) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}