{% extends 'base.html.twig' %}

{% block title %}Contact | Longo Formation {% endblock %}

{% block body %}

    <div class="d-flex h-100 w-100">
        <div class="m-auto">
            <h1>Nous contacter</h1>




            <div class="container mt-4">
                <form method="post">
                    <label for="inputLastName">Nom: </label>
                    <input type="text"  name="lastName" id="inputLastName"
                           class="form-control mt-4 mb-4" autocomplete="lastName" required autofocus>
                    <label for="inputFirstName">Prénom: </label>
                    <input type="text" name="email" id="inputFirstName"
                           class="form-control mt-4 mb-4" autocomplete="email" required autofocus>
                    <label for="inputPhone">Téléphone: </label>
                    <input type="tel" name="email" id="inputPhone"
                           class="form-control mt-4 mb-4" autocomplete="email" required autofocus>
                    <label for="inputRelevantTraining">Formation concernée: </label>
                    <input type="email" name="email" id="inputRelevantTraining"
                           class="form-control mt-4 mb-4" autocomplete="email" required autofocus>
                    <label for="inputCom">Commentaire: </label>
                    <input type="text" name="email" id="inputCom"
                           class="form-control mt-4 mb-4" autocomplete="email" required autofocus>

                    <button class="mt-4 btn btn-lg btn-primary rounded-pill" type="submit">
                        Envoyer
                    </button>
                </form>
            </div>

        </div>
    </div>
{% endblock %}