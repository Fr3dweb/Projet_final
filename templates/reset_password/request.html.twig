{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mot de passe{% endblock %}

{% block myContent %}
    <div class="container">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="my-3">Mot de passe oublié?</h1>

        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Veuillez entrer votre adresse email pour recevoir un e-mail de réinitialisation de votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary my-3">Envoyer un e-mail de réinitialisation du mot de passe</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
