<header>
    <div class="container">
        <section class="row pb-2 pb-md-0">
            <div class="col-md-4 col-lg-3">
                <a href="{{ path('app_home') }}" target="_self">
                    <img class="logo" src="{{ asset("build/images/logoSite.png") }}" alt="Logo du site">
                </a>
            </div>
            <div class="m-auto me-md-0 text-center col-6 col-md-3 col-lg-2 pt-1">
                {% if not app.user %}
                    <div class="nav-item d-block">
                        <a href="{{ path('app_login') }}" class="nav-link">
                            <img src="{{ asset("build/images/avatar.png") }}" alt="Avatar"
                                 width="35" height="35">
                            Connexion
                        </a>
                    </div>
                {% else %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="">
                            <a class="pt-0" href="{{ path('admin') }}">
                                <img src="{{ asset("build/images/icon-fireman.png") }}" alt="Avatar" width="30"
                                     height="30">
                                Admin
                            </a>
                        </div>
                        <div class="nav-item d-block">
                            <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% else %}
                        <div class="nav-item d-block">
                            <a href="{{ path('app_logout') }}">
                                <img class="p-lg-1 pt-0" src="{{ asset("build/images/avatar.png") }}" alt="Avatar"
                                     width="30" height="30">
                                Déconnexion
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
            <div class="m-auto mx-md-0 col-6 col-md-3 col-lg-2">
                {#                  L'attribut rel="nofollow" indique au robot qu'il ne doit pas suivre le lien, qu'il ne compte pas pour le referencement  #}
                {#                  L'attribut target="_self" indique que la page sera ouverte dans la même fenêtre que la page actuelle. #}
                <a class="btn-contact" href="{{ path('app_contact') }}" rel="nofollow"
                   target="_self">Nous contacter</a>
            </div>
        </section>
    </div>
    <nav class="navbar navbar-expand-lg colorBgNav">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav d-flex justify-content-around col-12">
                    <li class="nav-item d-block">
                        <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item d-block">
                        <a class="nav-link" aria-current="page" href="{{ path('app_formations') }}">Nos formations</a>
                    </li>
                    <li class="nav-item d-block">
                        <a class="nav-link" href="{{ path('app_whoWeAre') }}">Qui sommes-nous?</a>
                    </li>
                    <li class="nav-item d-block">
                        <a class="nav-link" href="#">Photos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


